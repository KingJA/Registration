<?xml version="1.0" encoding="utf-8"?>
<com.tdr.registration.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/square_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <com.github.czy1121.view.CornerLabelView
        android:id="@+id/image_tag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        app:clvFlags="right"
        app:clvText1="123"
        app:clvPaddingBottom="2dp"
        app:clvPaddingTop="-1dp"
        app:clvText1Height="13dp"
        app:clvText1Color="@color/white"
        app:clvFillColor="#ff7721"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">
        <ImageView
            android:id="@+id/image_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />

    </LinearLayout>


</com.tdr.registration.view.SquareLayout>