<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_insurance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/image_insurance" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_icon"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_insuranceNme"
                    style="@style/inputText"
                    android:text="防盗备案装置费用" />
                <TextView
                    android:id="@+id/tv_isMandatory"
                    style="@style/inputText"
                    android:visibility="gone"
                    android:text="(必选)" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_instructionsDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_insuranceSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="45dp"
                    android:text="送指定年限产品责任险"
                    android:textColor="@color/colorDisplay"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="3dp" />
            </LinearLayout>

            <com.tdr.registration.view.RadioGroupEx
                android:id="@+id/group_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:gravity="start"
                android:orientation="horizontal"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/check_insurance"
            style="@style/custom_checkBox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>

</LinearLayout>


