<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/blockBg"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="防盗车牌号" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_plateNumber"
                    style="@style/inputText"
                    android:hint="请输入防盗车牌号" />


            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="丢失时间" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_vehicleMissTime"
                    style="@style/inputText"
                    android:hint="请选择车辆丢失时间"
                    android:maxLength="18" />

            </LinearLayout>

            <LinearLayout
                style="@style/blockBg"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="车主姓名" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_ownerName"
                    style="@style/inputText"
                    android:hint="请输入车主姓名" />


            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="证件类型" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_ownerCardType"
                    style="@style/inputText"
                    android:hint="请输入车主身份证"
                    android:maxLength="18" />

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView4"
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="证件号码" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_ownerIdentity"
                    style="@style/inputText"
                    android:hint="请输入车主身份证"
                    android:maxLength="18" />

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="联系方式" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_ownerPhone"
                    style="@style/inputText"
                    android:hint="请输入车主联系方式"
                    android:inputType="number"
                    android:maxLength="18" />

            </LinearLayout>

            <LinearLayout
                style="@style/blockBg"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="银行户主" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_bankCardOwner"
                    style="@style/inputText"
                    android:hint="请输入卡片户主姓名" />

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="银行卡号" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_bankCardNumber"
                    style="@style/inputText"
                    android:hint="请输入银行卡卡号" />

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout
                style="@style/blockBg"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="经办民警" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_agentName"
                    style="@style/inputText"
                    android:hint="请输入派出所经办民警" />


            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout
                style="@style/blockBg"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="理赔车主" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_claimsName"
                    style="@style/inputText"
                    android:hint="请输入理赔车主"
                    android:maxLength="18" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_identity"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="right"
                        android:text="未找回车辆证明照片"
                        android:textColor="@color/colorInput"
                        android:textSize="15sp" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp">

                    <ImageView
                        android:id="@+id/relative_credentials"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/image_camera" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="59dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/asterisk"
                            android:textColor="@color/red"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/text_credentials"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="证明照片"
                            android:textColor="@color/colorHint"
                            android:textSize="10dp" />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout
                android:id="@+id/linear_cert"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="right"
                        android:text="理赔登记表照片"
                        android:textColor="@color/colorInput"
                        android:textSize="15sp" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp">

                    <ImageView
                        android:id="@+id/relative_cert"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/image_camera" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="59dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/asterisk"
                            android:textColor="@color/red"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/text_cert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="理赔登记"
                            android:textColor="@color/colorHint"
                            android:textSize="10dp" />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_next"
                style="@style/custom_button"
                android:text="提交" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>