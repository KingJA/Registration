<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="190.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32.5dip"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_updateBle"
            style="@style/blockBg"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ble_update" />

            <TextView
                style="@style/showText"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12.0dip"
                android:gravity="center_vertical"
                android:text="设备固件更新" />
        </LinearLayout>

        <ImageView
            style="@style/dividerLine"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linear_singleBlack"
            style="@style/blockBg"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/single_black" />

            <TextView
                style="@style/showText"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12.0dip"
                android:gravity="center_vertical"
                android:text="单车下发查缉" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_AerialSignal"
            style="@style/blockBg"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/single_black" />

            <TextView
                style="@style/showText"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12.0dip"
                android:gravity="center_vertical"
                android:text="空中信号强度" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>