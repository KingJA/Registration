<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <include layout="@layout/layout_electric_info" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="姓名" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_ownerName"
                    style="@style/inputText"
                    android:hint="请输入车主姓名" />

            </LinearLayout>

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="证件类型" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_cardType"
                    style="@style/inputText"
                    android:hint="请选择证件类型" />

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <ImageView style="@style/dividerLine" />

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="证件号码" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_ownerIdentity"
                    style="@style/inputText"
                    android:hint="请输入车主证件号"
                    android:maxLength="18" />

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/white">

                <FrameLayout
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_centerInParent="true">

                    <RelativeLayout
                        android:id="@+id/relative_identity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/image_camera">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="59dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/asterisk"
                                android:textColor="@color/red"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/text_ownerIdentity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="持车证和证件"
                                android:textColor="@color/colorHint"
                                android:textSize="10dp" />
                        </LinearLayout>


                    </RelativeLayout>

                </FrameLayout>

            </RelativeLayout>

            <ImageView style="@style/dividerLine" />


            <ImageView style="@style/dividerLine" />

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="联系手机"
                        android:id="@+id/textView3" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_ownerPhone1"
                    style="@style/inputText"
                    android:hint="请输入车主联系手机"
                    android:maxLength="11" />

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="备用电话" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_ownerPhone2"
                    style="@style/inputText"
                    android:hint="请输入车主备用电话"
                    android:maxLength="11" />

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:visibility="gone"/>

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="现住址" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_ownerCurrentAddress"
                    style="@style/inputText"
                    android:hint="请输入车主现住址" />

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <ImageView style="@style/dividerLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="过户原因"
                        android:textColor="@color/colorInput"
                        android:textSize="15sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_reason"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:maxLines="5"
                    android:textColor="@color/colorInput"
                    android:gravity="top"
                    android:textSize="15sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                style="@style/custom_button"
                android:text="过户" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>