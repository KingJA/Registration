<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorTitle">

        <ImageView
            android:id="@+id/IV_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:clickable="true"
            android:scaleType="center"
            android:background="@drawable/back_change"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="车辆预登记"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/RL_DX_PhotoList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none"/>
    <RelativeLayout
        android:id="@+id/RL_CarBrand"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/LL_CarBrand"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical|right"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TV_CarBrand_"
                style="@style/showText"
                android:layout_gravity="center_vertical"
                android:text="车辆品牌" />

        </LinearLayout>

        <TextView
            android:id="@+id/TV_CarBrand"
            style="@style/inputText"
            android:layout_toRightOf="@id/LL_CarBrand"
            android:hint="请选择车辆品牌" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/image_more" />


        <ImageView style="@style/dividerLine"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RL_PlateNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/LL_PlateNumber"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical|right"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/TV_PlateNumber_"
                style="@style/showText"
                android:layout_gravity="center_vertical"
                android:text="车牌号" />

        </LinearLayout>

        <EditText
            android:id="@+id/ET_PlateNumber"
            android:layout_toRightOf="@id/LL_PlateNumber"
            style="@style/inputText"
            android:hint="请输入车牌号" />

        <ImageView style="@style/dividerLine"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RL_FrameNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/LL_FrameNumber"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical|right"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/TV_FrameNumber_"
                style="@style/showText"
                android:layout_gravity="center_vertical"
                android:text="车架号" />

        </LinearLayout>

        <EditText
            android:id="@+id/ET_FrameNumber"
            style="@style/inputText"
            android:layout_toRightOf="@id/LL_FrameNumber"
            android:hint="如若不清用*代替" />

        <ImageView style="@style/dividerLine"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RL_MotorNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/LL_MotorNumber"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical|right"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/TV_MotorNumber_"
                style="@style/showText"
                android:layout_gravity="center_vertical"
                android:text="电机号" />

        </LinearLayout>

        <EditText
            android:id="@+id/ET_MotorNumber"
            style="@style/inputText"
            android:layout_toRightOf="@id/LL_MotorNumber"
            android:hint="如若不清用*代替" />

        <ImageView style="@style/dividerLine"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RL_Color"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/LL_Color"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical|right"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TV_Color_"
                style="@style/showText"
                android:layout_gravity="center_vertical"
                android:text="车辆主颜色" />

        </LinearLayout>

        <TextView
            android:id="@+id/TV_Color"
            style="@style/inputText"
            android:layout_toRightOf="@id/LL_Color"
            android:hint="请选择车辆主颜色" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/image_more" />


        <ImageView
            style="@style/dividerLine"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RL_BuyTime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/LL_BuyTime"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical|right"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TV_BuyTime_"
                style="@style/showText"
                android:layout_gravity="center_vertical"
                android:text="购买时间" />

        </LinearLayout>

        <TextView
            android:id="@+id/TV_BuyTime"
            style="@style/inputText"
            android:layout_toRightOf="@id/LL_BuyTime"
            android:hint="请选择购买时间" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/image_more" />


        <ImageView style="@style/dividerLine"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


    <Button
        android:id="@+id/BT_Next"
        style="@style/custom_button"
        android:text="下一步" />

</LinearLayout>