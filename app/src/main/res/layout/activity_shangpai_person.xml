<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/TV_Name"
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="姓名" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_ownerName"
                    style="@style/inputText"
                    android:hint="请输入车主姓名" />

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="证件类型" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_cardType"
                    style="@style/inputText"
                    android:hint="请选择证件类型" />

            </LinearLayout>

            <ImageView
                style="@style/dividerLine"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/linear_identity"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="证件照片"
                        android:textColor="@color/colorInput"
                        android:textSize="15sp" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp">

                    <ImageView
                        android:id="@+id/relative_identity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/image_camera" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="59dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/asterisk"
                            android:textColor="@color/red"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/text_identity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="证件照片"
                            android:textColor="@color/colorHint"
                            android:textSize="10dp" />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>


            <ImageView style="@style/dividerLine" />


            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="证件号码" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_ownerIdentity"
                    style="@style/inputText"
                    android:hint="请输入车主证件号码"
                    android:maxLength="18" />

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_showOwnerPhone1"
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="联系手机" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_ownerPhone1"
                    style="@style/inputText"
                    android:hint="请输入车主联系手机"
                    android:inputType="number"
                    android:maxLength="11" />

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:maxLength="11"
                        android:text="备用电话" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_ownerPhone2"
                    style="@style/inputText"
                    android:hint="请输入车主备用电话"
                    android:inputType="number"
                    android:maxLength="11" />

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout style="@style/blockBg">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_currentAddressStart"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:visibility="visible" />

                    <TextView
                        style="@style/showText"
                        android:layout_gravity="center_vertical"
                        android:text="现住址" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_ownerCurrentAddress"
                    style="@style/inputText"
                    android:hint="请输入车主现住址" />

            </LinearLayout>

            <ImageView style="@style/dividerLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="备注"
                        android:textColor="@color/colorInput"
                        android:textSize="15sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:gravity="top"
                    android:maxLines="5"
                    android:textColor="@color/colorInput"
                    android:textSize="15sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/image_identity"
                style="@style/dividerLine" />

            <LinearLayout
                android:id="@+id/LL_Agent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <RelativeLayout
                    android:id="@+id/relative_commission"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/descText"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="代办人" />

                    <CheckBox
                        android:id="@+id/check_commission"
                        style="@style/custom_checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="10dp"
                        android:text="有"
                        android:textColor="@color/colorHint" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/linear_commission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout style="@style/blockBg">

                        <LinearLayout
                            android:layout_width="85dp"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_alignParentLeft="true"
                                android:gravity="center_vertical|right"
                                android:text="*"
                                android:textColor="@color/red"
                                android:textSize="15sp" />

                            <TextView
                                style="@style/showText"
                                android:layout_gravity="center_vertical"
                                android:text="姓名" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/edit_commissionName"
                            style="@style/inputText"
                            android:hint="请输入代办人姓名" />

                    </LinearLayout>

                    <ImageView style="@style/dividerLine" />
                    <LinearLayout style="@style/blockBg">

                        <LinearLayout
                            android:layout_width="85dp"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_alignParentLeft="true"
                                android:gravity="center_vertical|right"
                                android:text="*"
                                android:textColor="@color/red"
                                android:textSize="15sp" />

                            <TextView
                                style="@style/showText"
                                android:layout_gravity="center_vertical"
                                android:text="证件类型" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_commissionCardType"
                            style="@style/inputText"
                            android:hint="请选择代办人证件类型" />

                    </LinearLayout>

                    <ImageView style="@style/dividerLine" />
                    <LinearLayout style="@style/blockBg">

                        <LinearLayout
                            android:layout_width="85dp"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_alignParentLeft="true"
                                android:gravity="center_vertical|right"
                                android:text="*"
                                android:textColor="@color/red"
                                android:textSize="15sp" />

                            <TextView
                                style="@style/showText"
                                android:layout_gravity="center_vertical"
                                android:text="证件号码" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/edit_commissionIdentity"
                            style="@style/inputText"
                            android:hint="请输入代办人证件号码"
                            android:maxLength="18" />

                    </LinearLayout>

                    <ImageView style="@style/dividerLine" />
                    <LinearLayout style="@style/blockBg">

                        <LinearLayout
                            android:layout_width="85dp"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_alignParentLeft="true"
                                android:gravity="center_vertical|right"
                                android:text="*"
                                android:textColor="@color/red"
                                android:textSize="15sp" />

                            <TextView
                                style="@style/showText"
                                android:layout_gravity="center_vertical"
                                android:text="联系方式" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/edit_commissionPhone1"
                            style="@style/inputText"
                            android:hint="请输入代办人联系方式"
                            android:inputType="number"
                            android:maxLength="11" />

                    </LinearLayout>

                    <ImageView style="@style/dividerLine" />
                    <LinearLayout style="@style/blockBg">

                        <LinearLayout
                            android:layout_width="85dp"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_alignParentLeft="true"
                                android:gravity="center_vertical|right"
                                android:text="*"
                                android:textColor="@color/red"
                                android:textSize="15sp" />

                            <TextView
                                style="@style/showText"
                                android:layout_gravity="center_vertical"
                                android:text="现住址" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/edit_AGENTADDR"
                            style="@style/inputText"
                            android:hint="请输入代办人现住址"
                            />

                    </LinearLayout>

                    <ImageView style="@style/dividerLine" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="85dp"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="备注"
                                android:textColor="@color/colorInput"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/edit_agentremark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="8dp"
                            android:background="@null"
                            android:gravity="top"
                            android:maxLines="5"
                            android:textColor="@color/colorInput"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/btn_next"
                style="@style/custom_button"
                android:text="下一步" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>